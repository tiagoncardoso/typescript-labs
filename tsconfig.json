{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "./app/src",
        "outDir": "./app/dist",
        "target": "ES6",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "strictNullChecks": true,
        "sourceMap": true,
    },
    "include": [
        "app/src/**/*"
    ]
}